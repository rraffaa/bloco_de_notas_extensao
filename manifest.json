{
    "manifest_version": 3,
    "name": "Bloco de Notas para Web",
    "version": "1.0",
    "description": "Uma extens√£o para criar, visualizar, editar e sincronizar notas diretamente do navegador.",
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "identity"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ]
  }
  